{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "path/to/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\**.c",
                "${fileDirname}\\2D\\**.c",
                "${fileDirname}\\2D\\Square\\**.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}